{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "ignorePatterns": ["/node_modules/", "/dist/"],
  "rules": {
    "no-console": "warn",

    "no-alert": "error",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "no-unreachable": "error",
    "require-await": "error"
  }
}
